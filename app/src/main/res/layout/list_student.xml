<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- ImageView z zdjęciem -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/student_photo_imageView"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/a"
        app:shapeAppearanceOverlay="@style/RoundCorner"
        />

    <!-- TextView z imieniem i nazwiskiem -->
    <TextView
        android:id="@+id/student_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/student_surname_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>

    <!-- TextView z numerem telefonu -->
    <TextView
        android:id="@+id/student_phone_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>

    <!-- TextView z adresem email -->
    <TextView
        android:id="@+id/student_email_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>

    <!-- TextView z godziną zajęć -->
    <TextView
        android:id="@+id/student_lesson_day_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/student_lesson_time_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>



    <Button
        android:id="@+id/present_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>